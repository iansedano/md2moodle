{
    "rules": [
        {
            "name": "spoiler",
            "element_type": "default",
            "tokens": {
                "start_tag": "\\[SPOILER\\]",
                "end_tag": "\\[/SPOILER\\]"
            },
            "actions": {
                "process_children": "convert_to_html",
                "add_prefix": "<details>\n<summary>Spoiler</summary>",
                "add_suffix": "</details>"
            }
        },
        {
            "name": "note",
            "element_type": "default",
            "tokens": {
                "start_tag": "\\[NOTE\\]",
                "end_tag": "\\[\\/NOTE\\]"
            },
            "actions": {
                "process_children": "convert_to_html",
                "add_prefix": "<div class=\"alert alert-info\" role=\"alert\">",
                "add_suffix": "</div>"
            }
        },
        {
            "name": "alert",
            "element_type": "default",
            "tokens": {
                "start_tag": "\\[ALERT\\]",
                "end_tag": "\\[\\/ALERT\\]"
            },
            "actions": {
                "process_children": "convert_to_html",
                "add_prefix": "<div class=\"alert alert-warning\" role=\"alert\">",
                "add_suffix": "</div>"
            }
        },
        {
            "name": "category_tag",
            "element_type": "standalone_prefix",
            "tokens": {
                "prefix": "(@#)(\\S+)"
            },
            "actions": {
                "process_children": "convert_to_html",
                "add_prefix": "<span class=\"badge badge-pill badge-primary\" style=\"font-size:1.2em; background-color:#fbb03b; color:black\">",
                "add_suffix": "</span>"
            }
        },
        {
            "name": "todo item",
            "element_type": "standalone_prefix",
            "tokens": {
                "prefix": "(TODO)(.+)"
            },
            "actions": {
                "process_children": "delete"
            }
        }
    ]
}